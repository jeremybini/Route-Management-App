<% provide(:title, @climb.color+" "+@climb.grade) %>
<br>
<div class="container">
  <div class="row">
    <%= link_to 'Back to Wall', wall_path(@wall), class: "btn btn-primary" %>
    
    <!-- MAKE LOOK NICER!!!!!! -->

    <%= image_tag @climb.image.url(:large) if @climb.image.present? %>

    <p>
      <strong>Climb type:</strong>
      <%= @climb.climb_type %>
    </p>

    <p>
      <strong>Color:</strong>
      <%= @climb.color %>
    </p>

    <p>
      <strong>Grade:</strong>
      <%= @climb.grade %>
    </p>

    <p>
      <strong>Setter:</strong>
      <% if @climb.setter %>
        <%= @climb.setter.full_name %>
      <% else %>
        <%= @climb.setter_name %>
      <% end %>
    </p>

    <p>
      <strong>Wall:</strong>
      <%= @climb.wall.try(:name) %>
    </p>
    <% if routesetter %>
      <% if @climb.active %>
        <%= link_to 'Edit', edit_climb_path(@climb), class: "btn btn-info" %>
        <%= link_to 'Strip', archive_climb_path(@climb), method: :put, data: { confirm: 'Are you sure? This will archive the route.' }, class: "btn btn-warning" %>
      <% else %>
        <h4>This climb has been archived.</h4>
        <%= link_to "Reactivate Climb", archive_climb_path(@climb), method: :put, data: { confirm: 'Are you sure you want to reactivate this route?' }, class: "btn btn-warning" %>
      <% end %>
      <%= link_to 'Delete', climb_path(@climb), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure? This will permanently the route without archiving it.' } %>
    <% end %>
  </div>
</div>
