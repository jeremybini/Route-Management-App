<div class="container">
	<h1>Editing Climb</h1>
	<hr>
	<h3><%= @climb.wall.name.capitalize+": "+@climb.color+" "+@climb.grade+", set by "+@climb.setter_name||=@climb.setter.full_name %></h3>
	<hr>

	<%= render 'form' %>

	<hr>
	<%= link_to "Back to "+@climb.wall.name, wall_path(@climb.wall), class: "btn btn-primary" %>
	<%= link_to 'Delete', climb_path(@climb), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure? This will permanently the route without archiving it.' } %>
</div>
