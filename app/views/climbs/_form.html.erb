<%= form_for([@wall, @climb]) do |f| %>
  <% if @climb.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" >
      <h4><%= pluralize(@climb.errors.count, "error") %> prohibited this route from being saved:</h4>

      <ul>
      <% @climb.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<!--
  <div class="field">
    <%#= f.label :route_type %><br>
    <%#= f.select :route_type, options_for_select([['Boulder', 'Boulder'], ['Route', 'Route']], @route.route_type) %>
  </div>
-->
  <div class="field">
    <%= f.label :image %><br>
    <%= image_tag @climb.image.url(:thumb) if @climb.image.present? %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.select :color, options_for_select(Climb::COLORS, @climb.color) %><br>
    <%= f.text_field :color, disabled: true, id: "color_input", style: "display: none" %>
  </div>
  <% if (@wall.nil? && @climb.climb_type==='Boulder') || (!@wall.nil? && @wall.wall_type==='Boulder') %>
    <div class="field">
      <%= f.label :grade %><br>
      <%= f.select :grade, options_for_select(Climb::BOULDER_GRADES, @climb.grade) %> 
    </div>
  <% else %>
    <div class="field">
      <%= f.label :grade %><br>
      <%= f.select :grade, options_for_select(Climb::ROUTE_GRADES, @climb.grade) %> 
    </div>
  <% end %>

  <div class="field">
    <%= f.label :setter %><br>
    <%= f.select :setter, options_for_select(@setters, @climb.setter) %><br>
    <%= f.text_field :setter, id: "setter_input", disabled: true, style: "display: none" %>
  </div>

  <% unless @wall===nil %>
    <%= f.hidden_field :wall_id, :value => @wall.id  %><br>
    <%= f.hidden_field :climb_type, :value => @wall.wall_type  %>
  <% end %>
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-success"%>
  </div>
<% end %>

<script>
$(document).ready(function(){
  $( "#climb_color" ).change(function() {
    if ($(this).val() == "Other") {
      $("#color_input").prop("disabled", false).show()
    } else {
      $("#color_input").prop("disabled", true).hide()
    };    
  });

  $( "#climb_setter" ).change(function() {
    if ($(this).val() == "Other") {
      $("#setter_input").prop("disabled", false).show()
    } else {
      $("#setter_input").prop("disabled", true).hide()
    };    
  });
});
</script>

