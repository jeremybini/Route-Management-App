<div class="modal-header">
  <a class="close" data-dismiss="modal">Ã—</a>
  <h1>Log In</h1>
  
</div>

<div class="modal-body">
	<div id="error_explanation">
	  <ul class="wall-errors"></ul>
	</div>

  <%= form_tag sessions_path do %>
    <div class="control-group">
      <%= label_tag :email %>
      <div class="controls">
      	<%= text_field_tag :email, params[:email], id:"email-sample" %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag :password %>
      <div class="controls">
      	<%= password_field_tag :password %>
    	</div>
    </div>
    <p><%= link_to "Forgot your password?", new_password_reset_path, remote: true %></p>
    <div class="field">
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag :remember_me %>
    </div>
    <hr>
    <%= submit_tag "Log in", class: "btn btn-success" %>
    <%= link_to "Click here to log in and explore as a manager", sessions_path(:email => "manager@email.com", :password => "manager1234"),  method: :post, class: "btn btn-primary pull-right" %>
  <% end %>
</div>