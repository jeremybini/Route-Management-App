<% provide(:title, "Gym List") %>

<div class="jumbotron">
  <div class="container">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h1>Gyms</h1>
      <hr>
    </div>
  </div>
</div>  

<div class="container">
  <div class="row">
    <% @gyms.each do |gym| %>
      <div class="col-md-4">
        <div class="thumbnail">
          <div class="caption text-center">
            <h3><%= link_to gym.name, gym %></h3>
            <p><%= gym.location %></p>
          </div>
          <br>
        </div>
      </div>
    <% end %>
  </div>

  <br>

  <%= link_to 'New Gym', new_gym_path, class: "btn btn-primary" if admin %>

</div>
